{
    "name": "benzed-ts",
    "description": "TypeScript mono repo for all BenZed's code.",
    "scripts": {
        "postinstall": "npm run bootstrap && npm run build",
        "bootstrap": "lerna bootstrap --force-local",
        "update-deps": "npx npm-check -u",
        "packages:build": "lerna run build",
        "packages:test": "lerna run test",
        "packages:tsc": "lerna run tsc",
        "packages:lint": "eslint ./packages/** --fix",
        "packages:publish": "npm run packages:sync-versions; ts-node ./scripts/packages-publish.ts",
        "packages:sync-versions": "ts-node ./scripts/packages-sync-versions.ts",
        "start:file-server": "node ./packages/file-server/lib/scripts/start-file-server.js",
        "start:render-node": "node ./packages/renderer/lib/scripts/start-render-node.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenZed/benzed-ts.git"
    },
    "author": "BenZed",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/BenZed/benzed-ts/issues"
    },
    "homepage": "https://github.com/BenZed/benzed-ts#readme",
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/jest": "^28.1.6",
        "@types/node": "^18.0.6",
        "@types/semver": "^7.3.10",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "eslint": "^8.20.0",
        "jest": "^28.1.3",
        "lerna": "^5.1.8",
        "expect-type": "^0.13.0",
        "semver": "^7.3.5",
        "shx": "^0.3.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "peerDependencies": {
        "@feathersjs/authentication": "^5.0.0-pre.28",
        "@feathersjs/authentication-local": "^5.0.0-pre.28",
        "@feathersjs/configuration": "^5.0.0-pre.28",
        "@feathersjs/koa": "5.0.0-pre.28",
        "@feathersjs/feathers": "^5.0.0-pre.28",
        "@feathersjs/schema": "^5.0.0-pre.28",
        "@feathersjs/mongodb": "^5.0.0-pre.28",
        "@feathersjs/socketio": "^5.0.0-pre.28",
        "mongodb": "^4.9.0"
    }
}