{
    "name": "benzed-ts",
    "description": "TypeScript mono repo for all BenZed's code.",
    "scripts": {
        "bootstrap": "lerna bootstrap --force-local",
        "build": "lerna run build",
        "test": "lerna run test",
        "tsc": "lerna run tsc",
        "lint": "eslint ./packages/** --fix",
        "update-deps": "npx npm-check -u",
        "publish-packages": "ts-node ./scripts/publish-packages.ts",
        "sync-package-versions": "ts-node ./scripts/sync-package-versions.ts",
        "postinstall": "npm run bootstrap; npm run build; npm audit fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenZed/benzed-ts.git"
    },
    "author": "BenZed",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/BenZed/benzed-ts/issues"
    },
    "homepage": "https://github.com/BenZed/benzed-ts#readme",
    "devDependencies": {
        "@types/jest": "^28.1.6",
        "@types/semver": "^7.3.10",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "eslint": "^8.20.0",
        "jest": "^28.1.3",
        "lerna": "^5.1.8",
        "semver": "^7.3.5",
        "shx": "^0.3.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    }
}
