{
    "name": "benzed-ts",
    "description": "TypeScript mono repo for all BenZed's code.",
    "scripts": {
        "postinstall": "npm run bootstrap && npm run packages:build",
        "bootstrap": "lerna bootstrap --force-local",
        "update-deps": "npx npm-check -u",
        "packages:build": "lerna run build",
        "packages:test": "lerna run test",
        "packages:tsc": "lerna run tsc",
        "packages:lint": "eslint ./packages/** --fix",
        "packages:publish": "npm run packages:sync-versions; ts-node ./scripts/packages-publish.ts",
        "packages:sync-versions": "ts-node ./scripts/packages-sync-versions.ts",
        "start:file-server": "node ./packages/file-server/lib/scripts/start-file-server.js",
        "start:client-renderer": "node ./packages/file-server/lib/scripts/start-client-renderer.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenZed/benzed-ts.git"
    },
    "author": "BenZed",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/BenZed/benzed-ts/issues"
    },
    "homepage": "https://github.com/BenZed/benzed-ts#readme",
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/jest": "^29.1.0",
        "@types/node": "^18.7.23",
        "@types/semver": "^7.3.10",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "eslint": "^8.24.0",
        "expect-type": "^0.14.2",
        "jest": "^29.1.1",
        "lerna": "^5.5.4",
        "semver": "^7.3.7",
        "shx": "^0.3.4",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "peerDependencies": {
        "@feathersjs/authentication": "^5.0.0-pre.29",
        "@feathersjs/authentication-client": "^5.0.0-pre.29",
        "@feathersjs/authentication-local": "^5.0.0-pre.29",
        "@feathersjs/configuration": "^5.0.0-pre.29",
        "@feathersjs/feathers": "^5.0.0-pre.29",
        "@feathersjs/koa": "^5.0.0-pre.29",
        "@feathersjs/mongodb": "^5.0.0-pre.29",
        "@feathersjs/schema": "^5.0.0-pre.29",
        "@feathersjs/socketio": "^5.0.0-pre.29",
        "@feathersjs/socketio-client": "^5.0.0-pre.29",
        "mongodb": "^4.9.0"
    }
}