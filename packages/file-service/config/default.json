{
    "name": "benzed-file-server",
    "port": 4000,
    "db": {
        "uri": "mongodb://localhost:<port>/<database>",
        "port": 4250,
        "database": "benzed-file-server"
    },
    "authentication": {
        "entity": "user",
        "service": "users",
        "secret": "<super-secure-and-hashed-dev-auth-secret>",
        "authStrategies": [
            "jwt",
            "local"
        ],
        "jwtOptions": {
            "header": {
                "typ": "access"
            },
            "issuer": "benzed",
            "algorithm": "HS256",
            "expiresIn": "1d"
        },
        "local": {
            "usernameField": "email",
            "passwordField": "password"
        }
    },
    "renderer": {
        "settings": {
            "thumbnail-small": {},
            "thumbnail-medium": {},
            "thumbnail-large": {}
        }
    }
}